{
    "plugins": [
        "stylelint-no-unsupported-browser-features"
    ],
    "extends": [
        "stylelint-config-standard-scss"
    ],
    "rules": {
        "selector-class-pattern": "",
        "plugin/no-unsupported-browser-features": [
            true,
            {
                "browsers": "last 2 Chrome versions, last 2 ChromeAndroid versions, last 2 Firefox versions",
                "ignore": ["multicolumn"],
                "severity": "warning"
            }
        ]
    }
}
